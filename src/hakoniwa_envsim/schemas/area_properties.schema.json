{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AreaProperties",
  "type": "object",
  "properties": {
    "area_properties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this property set (used in Link)"
          },
          "properties": {
            "type": "object",
            "properties": {
              "wind_velocity": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 3,
                "maxItems": 3,
                "description": "3D wind velocity vector [x,y,z]"
              },
              "temperature": {
                "type": "number",
                "description": "Temperature in Celsius"
              },
              "sea_level_atm": {
                "type": "number",
                "description": "Relative sea level atmospheric pressure"
              },
              "gps_strength": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 1.0,
                "description": "GPS signal strength (0.0 to 1.0, 1.0=best, 0.0=blocked)"
              }
            },
            "required": ["wind_velocity", "temperature", "sea_level_atm", "gps_strength"],
            "additionalProperties": false
          }
        },
        "required": ["id", "properties"],
        "additionalProperties": false
      }
    }
  },
  "required": ["area_properties"],
  "additionalProperties": false
}
